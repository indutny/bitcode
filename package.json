{
  "name": "bitcode",
  "version": "1.0.0-beta0",
  "description": "LLVM bitcode generator",
  "main": "lib/bitcode.js",
  "types": "lib/bitcode.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "prepare": "npm run clean && npm run build",
    "lint": "tslint -c tslint.json src/*.ts src/**/*.ts src/**/**/*.ts test/*.ts",
    "mocha": "mocha -r ts-node/register/type-check --reporter spec test/*-test.ts",
    "test": "npm run mocha && npm run lint"
  },
  "keywords": [
    "bitcode",
    "binary",
    "llvm"
  ],
  "author": "Fedor Indutny <fedor@indutny.com> (http://darksi.de/)",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "mocha": "^5.0.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "bitcode-builder": "git://github.com/indutny/bitcode-builder.git"
  }
}
